{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/ui-components/*"],
      "@templates/*": ["./src/Templates/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}
